  <div class="row">
  <div class="col-md-12">
   <% @table.each do |t| %>
    <table class="table table-striped table-hover">
    <h2><%= t.name %></h2>
    <h3>Order Id : <%= t.orders %></h3>
      <thead>
        <tr>
          <td>Table</td>
          <td>Detail Of Item</td>
          <td>Price</td>
          <td>Portion</td>
          <td>Type</td>
          <td>Status</td>
        </tr>
      </thead>
      <tbody>
        <%# @order.each do |i| %>
        <tr>
          <td><%#= i.name %></td>
          <td><%#= i.detail_of_item %></td>
          <td><%#= i.price %></td>
          <td><%#= i.portion %> Orang</td>
          <td><%#= i.type_of_item %></td>
          <td>
            <%#= if i.available.eql? true
                "Available"
              else
                "Not Available"
              end
             %>
          </td>
          
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>
</div>