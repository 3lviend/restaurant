  <div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Items</h2>
    </div>
  </div>
  <div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Detail</th>
          <th>Price</th>
          <th>Portion</th>
          <th>Type</th>
          <th>Status</th>
          <th colspan="2" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @item.each do |i| %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.detail_of_item %></td>
          <td><%= i.price %></td>
          <td><%= i.portion %> Orang</td>
          <td><%= i.type_of_item %></td>
          <td>
            <%= if i.available.eql? true
                "<span class=' vcenter label label-success'>Available</span>".html_safe
              else
                "<span class=' vcenter label label-warning'>Not Available</span>".html_safe
              end
             %>
          </td>
          <td><%= link_to 'Edit', edit_item_path(i), 'data-no-turbolink' => true, class: "btn btn-primary"  %></td>
          <% if current_user.role.name.eql? "admin" %>
            <td><%= link_to 'Delete', i, method: :delete, data:{confirm: 'Are You Sure'}, class: 'btn btn-warning' %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% if current_user.role.name.eql? "admin" %>
      <%= link_to 'ADD', new_item_path, class: 'btn btn-primary', "data-no-turbolink" => true %>
    <% end %>
    </div>
  </div>