<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">Ingredient</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Detail Of Quantity</th>
          <th colspan="2" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredient.each do |i| %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.quantity %></td>
          <td><%= i.detail_of_quantity %></td>
          <td class="text-center"><%= link_to 'Edit', edit_ingredient_path(i), class: "btn btn-primary", "data-no-turbolink" => true %></td>
          <td class="text-center"><%= link_to 'Delete', i, method: :delete, data:{confirm: 'Are you sure?'}, class:'btn btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'ADD', new_ingredient_path, class: 'btn btn-primary', "data-no-turbolink" => true %>
  </div>
</div>