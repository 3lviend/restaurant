<br>
<div class="row">
  <div class="col-md-4">
    <div class="quicklink">
      <h5><b>Ingredient</b></h5>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td>No</td>
              <td>Name</td>
              <td>Quantity</td>
              <td>Detail Of Quantity</td>
            </tr>
          </thead>
          <tbody>
            <% @ingredient.each_with_index do |i, index| %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= i.name %></td>
                <td><%= i.quantity %></td>
                <td><%= i.detail_of_quantity %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <%=link_to 'View More', ingredients_path, class:"btn btn-primary"%>
    </div>
  </div>

  <div class="col-md-4">
    <div class="quicklink">
      <h5><b>Items</b></h5>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td>No</td>
              <td>Name</td>
              <td>Price</td>
              <td>Status</td>
            </tr>
          </thead>
          <tbody>
          <% @item.each_with_index do |i, index| %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= i.name %></td>
              <td><%= i.price %></td>
              <td>
              <%= if i.available.eql? true 
                  "Available"
                else
                  "Not Available"
                end
              %>
              </td>
            </tr>
          <%end%>
          </tbody>
        </table>
        <%=link_to 'View More', items_path, class:"btn btn-primary"%>
    </div>
  </div>

  <div class="col-md-4">
    <div class="quicklink">
      <h5><b>Tables</b></h5>
      <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td>No</td>
              <td>Name</td>
              <td>Status</td>
            </tr>
          </thead>
          <tbody>
          <% @item.each_with_index do |i, index| %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= i.name %></td>
              <td>
              <%= if i.available.eql? true 
                  "Available"
                else
                  "Not Available"
                end
              %>
              </td>
            </tr>
          <%end%>
          </tbody>
        </table>
        <%=link_to 'View More', tables_path, class:"btn btn-primary"%>
    </div>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-4">
  <div class="quicklink">
    <h5><b>Orders</b></h5>
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <td>No</td>
            <td>Table</td>
            <td>Status</td>
          </tr>
        </thead>
        <tbody>
        <% @order.each_with_index do |i, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= i.table.name unless i.table.nil? %></td>
            <td><%= i.status %></td>
          </tr>
        <%end%>
        </tbody>
      </table>
      <%=link_to 'View More', orders_path, class:"btn btn-primary"%>
  </div>
</div>

<script type="text/javascript">
  function reload(){
    window.location.reload();
  };

  setInterval('reload()', 1800000);
  // console.log(300000/60)
</script>