<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">Orders</h2>
  </div>
</div>
<div class="row">
<div class="col-md-12">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>No</th>
        <th>Order Id</th>
        <th>Table</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @order.each_with_index do |o, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= o.id %></td>
          <td><%= o.table.name unless o.table.nil? %></td>
          <% if o.status.eql? "paid" %>
          <td><input type="checkbox" data-id="<%= o.id %>" class="<%= o.id %> status-order" checked data-toggle="toggle" data-on="Paid" data-off="Unpaid"></td>
          <% else %>
          <td><input type="checkbox" data-id="<%= o.id %>" class="<%= o.id %> status-order" data-toggle="toggle" data-on="Paid" data-off="Unpaid"></td>
          <% end %>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<%= render "shared/loading_modal" %>