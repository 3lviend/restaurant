<div class="row">
  <div class="alert alert-info" style="display:none">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </div>
  <div class="col-md-4">  
      <div class="input-group">
         <%= text_field_tag :searchItems, params[:term],class: "form-control", placeholder: "search item", type: "search"%>
         <span class="input-group-btn">
           <%= button_tag(type: "submit", class: "btn btn-default cs-btn") do %>
            <i class="fa fa-search"></i>
           <% end %>
         </span>
      </div>
      <div class="item_description well" style="display:none;"></div>
  </div>
</div>
