<div class="row">
  <div class="col-lg-12">
      <h2 class="page-header">Tables</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th colspan="2 " class="text-center">Action</th>
        </tr class="text-center">
      </thead>
      <tbody>
        <% @table.each do |t| %>
        <tr>
          <td><%= t.name %></td>
          <td>
          <%= if t.available.eql? true
              "<span class='label label-success'>Available</span>".html_safe
            else
              "<span class='label label-warning'>Not Available</sapn>".html_safe
            end
           %>
          </td>
          <td class="text-center"><%= link_to 'Edit', edit_table_path(t), class: "btn btn-primary", "data-no-turbolink" => true %></td >
          <td class="text-center"><%= link_to 'Delete', t, method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'ADD', new_table_path, class: 'btn btn-primary', "data-no-turbolink" => true %>
  </div>
</div>
