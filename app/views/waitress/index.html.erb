<div class="row">
  <div class="col-lg-12">
      <h2 class="page-header">Waitress</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th colspan="2" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @waitress.each do |w| %>
        <tr>
          <td><%= w.email %></td>
          <td align="center"><%= link_to 'Edit', edit_waitress_path(w), class: 'btn btn-primary' %></td>
          <td align="center"><%= link_to 'Delete', waitress_path(w), method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'ADD', new_waitress_path, class: 'btn btn-primary' %>
  </div>
</div>